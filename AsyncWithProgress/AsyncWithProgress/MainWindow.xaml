<Window x:Class="AsyncWithProgress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncWithProgress"
        mc:Ignorable="d"
        Title="MainWindow" Height="143.093" Width="457.809" Background="#FF424242" >
    <Grid>
        <ProgressBar x:Name="pb_Progress" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Height="50" Foreground="Goldenrod" Background="DarkGray" Minimum="0" Maximum="100"/>
        <Button x:Name="btn_Start" Content="Start" HorizontalAlignment="Left" Margin="327,65,0,0" VerticalAlignment="Top" Width="96" Height="39" Foreground="WhiteSmoke" Background="DodgerBlue" Click="Button_Click"/>
        <TextBlock x:Name="tb_Progress" HorizontalAlignment="Left" Margin="25,59,0,0" TextWrapping="Wrap" Text="0%" VerticalAlignment="Top" Height="42" Width="180" FontSize="24" Foreground="WhiteSmoke"/>
        <Button x:Name="btn_Cancel" Content="Abort" HorizontalAlignment="Left" Margin="250,65,0,0" VerticalAlignment="Top" Width="66" Height="39" Foreground="WhiteSmoke" Background="Red" Click="btn_Cancel_click" IsEnabled="False"/>

    </Grid>
</Window>
